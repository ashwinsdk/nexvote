# =============================================================================
# NexVote Environment Variables
# Copy this file to .env and fill in values. NEVER commit .env to version control.
# =============================================================================

# -- Database --
DATABASE_URL=postgresql://nexvote@localhost:5432/nexvote
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -- Auth --
JWT_SECRET=change-me-to-a-random-string
JWT_EXPIRES_IN=7d
OTP_SERVICE_URL=http://localhost:3001/otp
OTP_EXPIRY_SECONDS=300

# -- Blockchain / Relayer --
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/<ID>
RELAYER_PRIVATE_KEY=0xREPLAYER_PRIVATE_KEYS
NEXVOTE_REGISTRY_ADDRESS=0xDEPLOYED_CONTRACT_ADDRESS
CHAIN_ID=11155111

# -- AI Service --
AI_SERVICE_URL=http://localhost:8000
AI_API_KEY=change-me-ai-api-key
SIMILARITY_THRESHOLD=0.85
EMBEDDING_DIMENSION=384
MAX_SUMMARY_TOKENS=200

# -- Email (Brevo / Sendinblue) --
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-brevo-login-email@example.com
SMTP_KEY=xsmtpsib-your-smtp-key-here
EMAIL_FROM=noreply@nexvote.app
EMAIL_FROM_NAME=NexVote

# -- IPFS / Pinata --
IPFS_PINATA_API_KEY=
IPFS_PINATA_SECRET=
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs

# -- Server --
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:4200

# -- Security --
CAPTCHA_SECRET=your-captcha-secret
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
PROPOSAL_RATE_LIMIT_MAX=5
RELAYER_RATE_LIMIT_MAX=50

# -- Logging --
LOG_LEVEL=info
LOG_FORMAT=json

# -- Email --
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-actual-email@example.com
SMTP_KEY=
EMAIL_FROM=noreply@nexvote.app
EMAIL_FROM_NAME=NexVote